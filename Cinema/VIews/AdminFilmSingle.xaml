<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinema.Views.NewPage1"
             Title="Admin Film Single">
    <VerticalStackLayout>
        <StackLayout Padding="10">
            <Entry Placeholder="Paste Image URL" Text="{Binding ImageUrl}" />
            <!-- Display image from URL -->
            <Image x:Name="SelectedImage" Source="{Binding ImageUrl}"  />
            <Entry Placeholder="Naziv filma" Text="{Binding Film.Naziv}" />
            <Entry Placeholder="Opis filma" Text="{Binding Film.Opis}" />
            <Entry Placeholder="Å½anr" Text="{Binding Film.Zanr}" />
            <Entry Placeholder="Trajanje (min)" Keyboard="Numeric" Text="{Binding Film.Trajanje}" />
            <Entry Placeholder="Trailer" Text="{Binding Film.Trailer}" />
            <Entry Placeholder="Ocjena" Keyboard="Numeric" Text="{Binding Film.Ocjena}" />
            <Entry Placeholder="Cijena" Keyboard="Numeric" Text="{Binding Projekcija.Cijena}" />
            <DatePicker Date="{Binding Projekcija.DatumVrijeme.Date}" />
            <TimePicker Time="{Binding Projekcija.DatumVrijeme.TimeOfDay}" />
            <Button Text="Spremi" Command="{Binding SaveCommand}" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>